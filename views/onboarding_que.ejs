    <script>
        function enableSubmitButton() {
            const btnSubmit = document.getElementById('btnSubmit');
            btnSubmit.removeAttribute('disabled');
            console.log('Submit button enabled.');
        }

        function enableNextQuestion(questionNumber) {
            var currentQuestion = document.getElementById('question' + questionNumber);
            var nextQuestion = document.getElementById('question' + (questionNumber + 1));

            var checkboxes = currentQuestion.querySelectorAll('input[type="checkbox"]');
            var isChecked = Array.from(checkboxes).some(checkbox => checkbox.checked);

            if (isChecked) {
                currentQuestion.style.display = 'none';

                if (nextQuestion) {
                    nextQuestion.style.display = 'block';
                    var nextButton = nextQuestion.querySelector('input[type="Button"]');
                    nextButton.disabled = false;
                } else {
                    currentQuestion.style.display = 'block';
                    showAlert();
                    enableSubmitButton();
                }
            } else {
                alert('Please select at least one option before moving to the next question.');
            }
        }

        function showAlert() {
            alert('You have submitted all questions. Thank you!');
        }
        
